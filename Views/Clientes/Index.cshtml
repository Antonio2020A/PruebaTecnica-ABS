@model IEnumerable<Cliente_Neumaticos.Models.Cliente>

@{
    ViewData["Title"] = "Inicio";
}

<h1>Clientes</h1>

<p>
    <a asp-action="Create">Crear nuevo cliente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RFC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.D_calle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.D_numero_hogar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.D_colonia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.D_estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cp)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RFC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.D_calle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.D_numero_hogar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.D_colonia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.D_estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cp)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Editar cliente</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Detalles del cliente</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Borrar cliente</a>
            </td>
        </tr>
}
    </tbody>
</table>
